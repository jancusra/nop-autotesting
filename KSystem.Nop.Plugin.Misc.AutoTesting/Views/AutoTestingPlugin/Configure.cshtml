@using Nop.Web.Framework.UI
@model KSystem.Nop.Plugin.Misc.AutoTesting.Models.AutoTestingConfigureModel

@{
    Html.SetActiveMenuItemSystemName("KSystem.AutoTesting.Configuration");
}

@{
    Layout = "_AdminLayout";
}

<form asp-controller="AutoTestingPlugin" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("KSystem.Nop.Plugin.Misc.AutoTesting.AutoTesting") - @T("Admin.Configuration.Settings")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <nop-cards id="auto-testing-plugin-cards">
                    <nop-card asp-name="configure-robot" asp-icon="fas fa-robot" asp-title="@T("KSystem.Nop.Plugin.Misc.AutoTesting.AutoTestingRobot")"
                              asp-hide-block-attribute-name="panel-robot" asp-hide="false" asp-advanced="false">@await Html.PartialAsync("_Configure.Robot", Model)
                    </nop-card>
                </nop-cards>
            </div>
        </div>
    </section>
</form>
