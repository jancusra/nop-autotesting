@using Nop.Web.Framework.UI
@model KSystem.Nop.Plugin.Misc.AutoTesting.Models.TestingTasks.TestingTaskModel

@{
    Layout = "_AdminLayout";

    Html.SetActiveMenuItemSystemName("KSystem.AutoTesting.TestingTasks");
}

<form asp-controller="TestingTasks" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("KSystem.Nop.Plugin.Misc.AutoTesting.TestingTasks") - @T("KSystem.Nop.Plugin.Core.Views.AddNewRecordTitle")
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(T("KSystem.Nop.Plugin.Core.Views.BackToList").Text, "List")</small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
