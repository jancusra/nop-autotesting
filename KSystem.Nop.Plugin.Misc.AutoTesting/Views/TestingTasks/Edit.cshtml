@using Nop.Web.Framework.UI
@model KSystem.Nop.Plugin.Misc.AutoTesting.Models.TestingTasks.TestingTaskModel

@{
    Layout = "_AdminLayout";

    NopHtml.SetActiveMenuItemSystemName("KSystem.AutoTesting.TestingTasks");
}

<form asp-controller="TestingTasks" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("KSystem.Nop.Plugin.Misc.AutoTesting.TestingTasks") -
            @if (Model.Id > default(int))
            {
                @Model.Name 
            }
            else
            {
                @T("Admin.Common.AddNewRecord")
            }
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(T("KSystem.Nop.Plugin.Misc.AutoTesting.BackToList").Text, "List")</small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="testingtasks-delete" class="btn bg-red">
                <i class="fas fa-trash"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>

<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="testingtasks-delete" />
